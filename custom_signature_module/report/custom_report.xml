<odoo>
    <!-- Custom report for Purchase Request -->
    <template id="report_purchase_request_document_custom" inherit_id="purchase_request.report_purchase_request">
        <xpath expr="//div[@class='footer']" position="replace">
            <div class="footer">
                <table style="width: 100%; margin-top: 20px;">
                    <tr>
                        <td style="text-align: center;">
                            ______________________
                            <br/> Requested By
                        </td>
                        <td style="text-align: center;">
                            ______________________
                            <br/> Approved By
                        </td>
                        <td style="text-align: center;">
                            ______________________
                            <br/> Reviewed By
                        </td>
                    </tr>
                </table>
            </div>
        </xpath>
    </template>

